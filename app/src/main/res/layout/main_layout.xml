<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="artictactoe.mvvm.view.MainActivity">

    <fragment
            android:id="@+id/sceneform_fragment"
            android:name="artictactoe.mvvm.view.CustomArFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <Button
            android:id="@+id/createRoom"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Create room"
    />
    <Button android:id="@+id/conectRoom"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Conect to Room"
            android:layout_toRightOf="@id/createRoom"
    />
    <EditText
            android:id="@+id/roomID"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Room id"
            android:textAlignment="center"
            android:layout_below="@id/createRoom"
            android:layout_toRightOf="@id/createRoom"
            android:layout_marginTop="-5dp"/>

</RelativeLayout>